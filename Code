ccloseontacts = {}

def input_error(func):
    def inner(*args, **kwargs):
        try:
            return func(*args, **kwargs)
        except KeyError:
            return "Contact not found"
        except ValueError:
            return "Please provide name and phone number separated by space"
        except IndexError:
            return "Please provide name or name and phone number separated by space"
    return inner

@input_error
def add_contact(contact):
    name, phone = contact.split()
    contacts[name] = phone
    return f"{name}'s phone number saved"

@input_error
def change_contact(name, phone):
    name, phone = contact.split()
    contacts[name] = phone
    return f"{name}'s phone number changed"

@input_error
def phone_number(name):
    return contacts[name]

def show_all():
    if not contacts:
        return "No contacts found"
    return "\n".join([f"{name}: {contacts[name]}" for name in contacts])

def main():
    print("How can I help you?")
    while True:
        command = input().strip().lower()
        if command == "hello":
            message = "How can I help you?"
            print(message)
        elif command.startswith("add"):
            ac = add_contact(command[4:].strip())
            print(ac)
        elif command.startswith("change"):
            cc = change_contact(command[7:].strip())
            print(cc)
        elif command.startswith("phone"):
            phone = phone_number(command[6:].strip())
            print(phone)
        elif command == "show all":
            sa = show_all()
            print(sa)
        elif command in ["good byeclose", "close", "exit"]:
            message = "Good bye!"
            print(message)
            break
        else:
            message = "Command not recognized"
            print(message)

if __name__ == "__main__":
    main()
